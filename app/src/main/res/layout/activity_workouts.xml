<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Pick a Workout Plan"
            android:textColor="#03A9F4"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>




    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/gainmuscle"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:text="Gain Muscle"
                    android:textSize="40dp"
                    android:textColor="#03A9F4"
                    android:gravity="center"
                    android:background="@drawable/login"
                    android:fontFamily="sans-serif-condensed-medium"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/romaniandeadlift"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/chestpress"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/loseweight"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="Lose Weight"
            android:textSize="40dp"
            android:textColor="#03A9F4"
            android:gravity="center"
            android:background="@drawable/login"
            android:fontFamily="sans-serif-condensed-medium"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tricepdips"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/jogging"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:id="@+id/maintainweight"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="Maintain Weight"
            android:textSize="40dp"
            android:textColor="#03A9F4"
            android:gravity="center"
            android:background="@drawable/login"
            android:fontFamily="sans-serif-condensed-medium"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tbarrow"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shrugs"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
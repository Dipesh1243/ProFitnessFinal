<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="37dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Maintain Weight"
        android:textColor="#2196F3"
        android:textSize="40dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/maintainweightrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:scrollbars="vertical" />


    <Button
        android:id="@+id/completemaintainweight"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@id/maintainweightrecyclerView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/returnback"
        android:backgroundTint="@drawable/completebutton"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Complete"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/returnback"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@+id/maintainweightrecyclerView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#03A9F4"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Return"
        android:textAllCaps="false" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cardio"
    >

    <TextView
        android:id="@+id/stretchestitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Stretches Exercises "
        android:textColor="#03A9F4"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/stretchesearch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/stretchestitle"
        android:background="@drawable/login"
        android:hint="Search"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="#03A9F4"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stretchrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/stretchesearch"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:scrollbars="vertical"
        />

</RelativeLayout>